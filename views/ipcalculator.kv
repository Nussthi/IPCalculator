
<MyGrid>

    ipadress_input: ipadress_input
    maskadress_input: maskadress_input

    hostid: hostid
    maskadress_output: maskadress_output
    netid: netid
    wildcard: wildcard
    broadcast: broadcast
    usableadresses: usableadresses
    firstadress: firstadress
    lastadress: lastadress

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2
            Label:
                text: "IP Adress : "
            TextInput:
                id: ipadress_input
                multiline: False
            Label:
                text: "Mask Adress : "
            TextInput:
                id: maskadress_input
                multiline: False

        Button:
            text: "Calculate"
            on_press: root.calculate_ips()

        GridLayout:
            cols: 2
            Label:
                text: "Host ID : "
            Label:
                id: hostid
                text: "-"
            Label:
                text: "Mask Adress : "
            Label:
                id: maskadress_output
                text: "-"
            Label:
                text: "Net ID : "
            Label:
                id: netid
                text: "-"
            Label:
                text: "Wildcard : "
            Label:
                id: wildcard
                text: "-"
            Label:
                text: "Broadcast : "
            Label:
                id: broadcast
                text: "-"
            Label:
                text: "Usable adresses : "
            Label:
                id: usableadresses
                text: "-"
            Label:
                text: "First adress : "
            Label:
                id: firstadress
                text: "-"
            Label:
                text: "Last adress : "
            Label:
                id: lastadress
                text: "-"
